@page
@model LoginModel

@{
    ViewData["Title"] = "Access Portal";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center font-monospace text-success mb-4">Access Portal</h2>
                    <div class="text-center mb-4">
                        <div class="font-monospace" style="color: var(--ctf-primary)">
                            <pre class="mb-0">
   ____ _____ _____   
  / ___|_   _|  ___| 
 | |     | | | |_    
 | |___  | | |  _|   
  \____| |_| |_|    
            </pre>
                        </div>
                    </div>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="handle@domain.com" />
                            <label asp-for="Input.Email">Handle</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Access Code</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Maintain Connection
                            </label>
                        </div>
                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg font-monospace">AUTHENTICATE</button>
                        </div>
                        <div class="mt-3 text-center">
                            <p>
                                <a class="text-success" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Initialize New Account</a>
                            </p>
                            <p>
                                <a class="text-success" id="forgot-password" asp-page="./ForgotPassword">Reset Access Code</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
