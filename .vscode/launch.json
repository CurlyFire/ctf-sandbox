{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C# Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/ctf-sandbox/bin/Debug/net9.0/ctf-sandbox.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/ctf-sandbox",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                // Override Mailpit URL to point to forwarded port on host machine as the browser is running on the host
                "EmailSettings__MailpitUrl": "http://localhost:8025"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/ctf-sandbox/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}